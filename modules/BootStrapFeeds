##AH:UseTextMode
module BootStrapFeeds
{
    PSDsc cChoco::cChocoSource
    (
        Otter_ConfigurationKey: Source,
        Name: Default,
        Ensure: Present,
        Source: $ChocolateyFeedUrl
    );

    PSDsc cChoco::cChocoSource
    (
        Otter_ConfigurationKey: Name,
        Name: chocolatey,
        Ensure: Absent
    );

    PSEnsure
    (
        Key: Default PowerShell module feed is $PowerShellModuleFeedUrl,
        Value: http://s16-dev:8624/nuget/powershell/,
        Collect: "(Get-PSrepository -Name Default -ErrorAction SilentlyContinue).SourceLocation",
        Configure: Register-PSRepository -Name Default -SourceLocation $PowerShellModuleFeedUrl -PublishLocation $PowerShellModuleFeedUrl -ScriptSourceLocation https://www.powershellgallery.com/api/v2/items/psscript -ScriptPublishLocation https://www.powershellgallery.com/api/v2 -InstallationPolicy Trusted -Verbose
    );

    PSEnsure
    (
        Key: PSGallery does not exist,
        Value: True,
        Collect: "!(Get-PSrepository -Name PSGallery -ErrorAction SilentlyContinue)",
        Configure: Unregister-PSRepository -Name psgallery
    );
}
